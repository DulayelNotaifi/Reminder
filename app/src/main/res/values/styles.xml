<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="PurpleDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/purple_500</item> <!-- header color -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- darker header color -->
        <item name="colorOnPrimary">@color/black</item> <!-- header text color -->
        <item name="colorAccent">@color/purple_500</item> <!-- selector color -->
        <item name="colorControlActivated">@color/purple_500</item> <!-- selected button color -->
        <item name="android:colorButtonNormal">@color/purple_500</item> <!-- button background color -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- button text color -->
        <item name="android:textColorSecondary">@android:color/black</item> <!-- date and month text color -->
    </style>
</resources>